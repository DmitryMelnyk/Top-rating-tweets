<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardViewTwitt"
    app:cardCornerRadius="3dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/twittAvatar"
                android:src="@drawable/twitt_ico"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/twittContent"
                android:text="Getting Started With Scala.js for the JavaScript Developer (Part 1 | Setup Vue.js) https://medium.com/@michaelmangial1/getting-started-with-scala-js-scalavue-and-scalareact-for-the-javascript-developer-ac578ddcb5a8 â€¦ #scala"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/twittLikes"
                style="@style/TextView.CustomTextView"/>

            <ImageView
                android:src="@drawable/ic_repeat_black_18dp"
                style="@style/ImageView"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/twittRetwitts"
                style="@style/TextView.CustomTextView"/>

            <ImageView
                android:src="@drawable/ic_favorite_border_black_18dp"
                style="@style/ImageView"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>